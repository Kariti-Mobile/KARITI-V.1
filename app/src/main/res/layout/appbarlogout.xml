<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="0dp"
    tools:context="online.padev.kariti.CadEscolaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        style="@style/BARRASPRINCIPAIS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="18dp">

        <!-- TÃ­tulo da ActionBar -->
        <ImageButton
            android:id="@+id/imageButtonInicio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/tranparente"
            android:contentDescription="@string/iconeVoltar"
            android:textColor="@android:color/black"
            app:showAsAction="always"
            app:srcCompat="@drawable/baseline_exit_to_app_24" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/app_name"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/iconHelpLogout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="7dp"
            android:background="@color/tranparente"
            android:contentDescription="@string/textAjuda"
            android:src="@mipmap/question" />

    </LinearLayout>

    <!--    <View-->
